{
  "name": "xentral/shopify-adapter",
  "description": "Library to connect to the Shopify API",
  "type": "library",
  "require": {
    "php": ">=7.2",
    "psr/log": "^1.1",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^6.5||^7.2",
    "symfony/polyfill-php80": "^1.20",
    "league/csv": "^9.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3",
    "phpstan/phpstan": "^0.12.63",
    "friendsofphp/php-cs-fixer": "^2.17"
  },
  "autoload": {
    "psr-4": {
      "XentralAdapters\\Shopify\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Manuel Christlieb",
      "email": "manuel.christlieb@xentral.com"
    }
  ],
  "scripts": {
    "test": [
      "./vendor/bin/phpunit --testdox"
    ],
    "static:check": [
      "./vendor/bin/phpstan analyse src"
    ],
    "lint:show": [
      "./vendor/bin/php-cs-fixer fix --allow-risky=yes --show-progress dots --dry-run --diff --diff-format=udiff --verbose"
    ],
    "lint:fix": [
      "./vendor/bin/php-cs-fixer fix --allow-risky=yes --show-progress dots --diff --diff-format=udiff --verbose"
    ]
  }
}
