{
    "name": "xentral-erp-software-gmbh/xentral",
    "description": "Lean ERP cloud software with the power to bundle all business processes centrally in one place.",
    "license": "proprietary",
    "repositories": {
        "shopify-adapter": {
            "type": "github",
            "url": "git@github.com:xentral-erp-software-gmbh/shopify-adapter.git",
            "no-api": true
        }
    },
    "require": {
        "ext-json": "*",
        "ext-simplexml": "*",
        "ext-soap": "*",
        "aura/sqlquery": "^2.7.1",
        "aws/aws-sdk-php": "^3.163",
        "bensampo/laravel-enum": "^3.3",
        "cpliakas/git-wrapper": "^3.0",
        "digitick/sepa-xml": "^2.0",
        "ezyang/htmlpurifier": "^4.13",
        "fiskaly/fiskaly-sdk-php": "^1.2",
        "guzzlehttp/guzzle": "^6.5.2",
        "intervention/validation": "^2.6",
        "laminas/laminas-mail": "^2.10.0",
        "laravel/framework": "^8.28",
        "laravel/tinker": "^2.6",
        "league/color-extractor": "^0.3.2",
        "league/flysystem": "^1.1",
        "league/oauth1-client": "^1.7.0",
        "league/oauth2-client": "^2.5",
        "lfkeitel/phptotp": "^1.0.0",
        "nikic/fast-route": "^1.3.0",
        "phpmailer/phpmailer": "^6.1.5",
        "phpseclib/phpseclib": "^3.0",
        "rakit/validation": "^0.22.3",
        "sabre/dav": "^3.2.3",
        "sentry/sentry-laravel": "^2.5",
        "smarty/smarty": "^3.1.34",
        "swiss-payment-slip/swiss-payment-slip": "0.13.0 as 0.11.1",
        "swiss-payment-slip/swiss-payment-slip-fpdf": "~0.6.0",
        "tecnickcom/tcpdf": "^6.3",
        "xentral/shopify-adapter": "v0.5.1",
        "y0lk/oauth1-etsy": "^1.0.2"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.5",
        "barryvdh/laravel-ide-helper": "^2.9",
        "captainhook/captainhook": "^5.4",
        "captainhook/plugin-composer": "^5.2",
        "facade/ignition": "^2.5",
        "fakerphp/faker": "^1.11",
        "friendsofphp/php-cs-fixer": "^2.18",
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^8.5"
    },
    "replace": {
        "itbz/fpdf": "*",
        "laminas/laminas-zendframework-bridge": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Xentral\\": "classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "platform": {
            "php": "7.3"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "production": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "php refreshFileCache.php",
            "@php artisan package:discover --ansi"
        ],
        "post-autoload-dump": [
            "@production",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate"
        ],
        "lint-staged-files": "dev/lint-staged-files.sh",
        "lint:fix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --verbose",
        "lint:show": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --show-progress dots --dry-run --diff --diff-format=udiff --verbose"
    }
}
